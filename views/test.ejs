<section id="test-page" class="py-lg-5">
    <div class="container">
        <form method="POST" action="/test/<%=testId%>" id="quiz-form">
            <div class="tab-content" id="test-content">
                <% for (let i = 0; i < test.length; i++) { %>
                    <div class="tab-pane fade <%= i === 0 ? 'show active' : '' %>" id="question-<%=test[i].questionId %>" role="tabpanel" aria-labelledby="question-<%=test[i].questionId %>-tab" tabindex="0">
                        <h3><%=i + 1 %>. <%=test[i].question %></h3>
                        <div class="answers">
                            <% for (let j = 0; j < test[i].answerIds.length; j++){ %>
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="radio" name="answers[<%=test[i].questionId %>]" id="answer-<%=test[i].questionId %>-<%= j + 1 %>" value="<%=test[i].answerIds[j] %>">
                                    <label class="form-check-label" for="answer-<%=test[i].questionId %>-<%= j + 1 %>">
                                        <%=test[i].answers[j] %>
                                    </label>
                                </div>
                            <% } %>
                        </div>
                    </div>
                <% } %>
                <div class="tab-pane fade" id="end-tab" role="tabpanel" aria-labelledby="end-tab" tabindex="0">
                    <div class="row justify-content-center">
                        <div class="col-lg-6">
                            <div class="card shadow">
                                <div class="card-body text-center">
                                    <h2 class="mb-4">You have reached the end of the test!</h2>
                                    <p>If you submit your answers now, you will not be able to take this test again for the next three months.</p>
                                </div>
                                <div class="card-footer text-center">
                                    <button type="submit" class="btn btn-warning">Submit your answers</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% for (let i = 0; i < test.length; i++) { %>
                <ul class="nav nav-tabs test-content-navigation <%= i === 0 ? 'active' : '' %>" id="test-content-navigation-<%=test[i].questionId %>" role="tablist">
                    <% if(i !== 0){ %>
                        <li class="nav-item me-3" role="presentation">
                            <button class="nav-link back-nav-link" type="button" onclick="customShowTab('#question-<%=test[i-1].questionId %>', '#test-content-navigation-<%=test[i-1].questionId %>')">
                                <i class="bi bi-chevron-left"></i>
                                Back
                            </button>
                        </li>
                    <% } %>
                    <% if(i !== test.length - 1){ %>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" type="button" onclick="customShowTab('#question-<%=test[i+1].questionId %>', '#test-content-navigation-<%=test[i+1].questionId %>')">
                                Next
                                <i class="bi bi-chevron-right"></i>
                            </button>
                        </li>
                    <% } else { %>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" type="button" onclick="customShowTab('#end-tab')">
                                Next
                                <i class="bi bi-chevron-right"></i>
                            </button>
                        </li>
                    <% } %>
                </ul>
            <% } %>
        </form>
    </div>
</section>
<script>
    function customShowTab(tabSelector, tabNavigatorSelector){
        const tabs = document.querySelectorAll("#test-content .tab-pane");
        tabs.forEach(tab => {
            tab.classList.remove("show");
            tab.classList.remove("active");
        })

        const tabsNavigators = document.querySelectorAll(".test-content-navigation");
        tabsNavigators.forEach(tabsNavigator => {
            tabsNavigator.classList.remove("active");
        })
        
        document.querySelector(tabSelector).classList.add("show");
        document.querySelector(tabSelector).classList.add("active");
        document.querySelector(tabNavigatorSelector).classList.add("active");


    }
</script>