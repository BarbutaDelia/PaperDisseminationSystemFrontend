<section class="bg-secondary py-lg-5 position-relative">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <h1 class="display-4 fst-italic">Nume badge</h1>
          <hr class="hero-divider" />
          <div class="h3 fw-normal">Advanced</div>
        </div>
      </div>
    </div>
  </section>
<section class="py-5">
    <div class="container">
        <form method="POST" action="/test/<%=testId%>" id="quiz-form">
            <% for (let i=0; i < test.length; i++) { %>
                <div class="container-question mb-5">
                    <div class="question">
                        <div class="h3 mb-3" id="<%=test[i].questionId %>" name="question-<%=test[i].questionId %>">
                            <%=i + 1 %>. <%=test[i].question %>
                        </div>
                        <div class="" id="options">
                            <% for (let j=0; j < test[i].answerIds.length; j++){ %>
                                <label class="options">
                                    <%=test[i].answers[j] %>
                                        <input type="radio" name="answers[<%=test[i].questionId %>]"
                                            value="<%=test[i].answerIds[j] %>">
                                        <span class="checkmark bg-dark-gray"></span>
                                </label>
                                <% } %>
                        </div>
                    </div>
                </div>
            <% } %>
            <% if(test.length !=0){ %>
                <div class="col-12">
                    <div class="d-flex justify-content-center">
                        <button class="btn btn-warning px-4 py-2" type="submit">Finish</button>
                    </div>
                </div>
            <% } %>
        </form>
    </div>
</section>
