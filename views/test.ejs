<section class="lg-5">
    <div class="p-5">
        <form method="POST" action="/test/<%=testId%>" id="quiz-form">
            <% for (let i=0; i < test.length; i++) { %>
                <div class="container-question">
                    <div class="question ml-sm-5 pl-sm-5 pt-2">
                        <div class="py-2 h3" id="<%=test[i].questionId %>" name="question-<%=test[i].questionId %>">
                            <%=i + 1 %>. <%=test[i].question %>
                        </div>
                        <div class="ml-md-3 ml-sm-3 pl-md-5 pt-sm-0 pt-3" id="options">
                            <% for (let j=0; j < test[i].answerIds.length; j++){ %>
                                <label class="options">
                                    <%=test[i].answers[j] %>
                                        <input type="radio" name="answers[<%=test[i].questionId %>]"
                                            value="<%=test[i].answerIds[j] %>">
                                        <span class="checkmark bg-dark-gray"></span>
                                </label>
                                <% } %>
                        </div>
                    </div>
                </div>
            <% } %>
            <% if(test.length !=0){ %>
                <div class="col-12 py-3">
                    <div class="d-flex justify-content-center">
                        <button class="btn btn-warning px-4 py-2" type="submit">Finish</button>
                    </div>
                </div>
            <% } %>
        </form>
    </div>
</section>
