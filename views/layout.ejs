<!DOCTYPE html>
<html>

<head>
  <title>Paper dissemination system</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/style.css">

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/web3@1.6.0/dist/web3.min.js" defer></script>
  <script src="/js/validation.js" defer></script>
  <script src="/js/config.js" type="module" defer></script>
  <script src="/js/listenForEvents.js" type="module" defer></script>
</head>

<body>
  <div id="alert-container-map" class="container-fluid position-fixed">
    <div class="row">
      <div class="col-lg-8"></div>
      <div class="col-lg-4" id="alert-container">
        <% alert = typeof alert !== 'boolean' ? false : alert %>
        <% status = typeof status !== 'boolean' ? false : status %>
        <% result = typeof result !== 'string' ? false : result %>
        <% isLoggedIn = typeof isLoggedIn !== 'string' ? null : isLoggedIn %>
        <% if (alert) { %>
          <% if(status) {%>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
              <strong>
                <%=result %>
              </strong>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } else {%>
              <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>
                  <%=result %>
                </strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
              <% } %>
                <% } %>
      </div>
    </div>
  </div>
  <div class="b-example-divider"></div>
  <% if(isLoggedIn === null) { %>
  <header class="py-3 bg-dark">
    <div class="container">
      <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start " id="navbar">
        <a href="/" class="d-flex align-items-center mb-2 me-2 mb-lg-0 text-white text-decoration-none">
          <img id="header-logo" src="/assets/PDS-logo.png" />
        </a>

        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
          <li><a href="/" class="nav-link px-2">Home</a></li>
          <li><a href="/about" class="nav-link px-2">About</a></li>
        </ul>

        <% if (typeof showSearch !== 'undefined' && showSearch) { %>
          <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" role="search" method="GET" action="/">
              <input type="search" class="form-control form-control-dark text-bg-white" placeholder="Search..." aria-label="Search"  name="searchQuery">
          </form>
        <% } %>

        <div class="text-end">
          <a class="btn btn-outline-light me-2" href="/login" role="button">Login</a>
          <a class="btn btn-warning" href="/signup" role="button">Sign-up</a>
        </div>
      </div>
    </div>
  </header>
  <% } else {%>
    <header class="p-3 bg-dark">
      <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
          <a href="/" class="d-flex align-items-center mb-2 me-2 mb-lg-0 text-white text-decoration-none">
            <img id="header-logo" src="/assets/PDS-logo.png" />
          </a>
  
          <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
            <li><a href="/" class="nav-link px-2">Home</a></li>
            <li><a href="/about" class="nav-link px-2">About</a></li>
            <li><a href="/badges" class="nav-link px-2 text-white">Get a badge</a></li>
            <li><a href="/add-article" class="nav-link px-2 text-white">Add an article</a></li>
          </ul>
  
          <% if (typeof showSearch !== 'undefined' && showSearch) { %>
            <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" role="search" method="GET" action="/">
                <input type="search" class="form-control form-control-dark text-bg-white" placeholder="Search..." aria-label="Search"  name="searchQuery">
            </form>
          <% } %>
          
          <div class="btn-group">
            <button type="button" class="btn btn-warning dropdown-toggle bi-house-fill" data-bs-toggle="dropdown" aria-expanded="false">
            </button>
            <ul class="dropdown-menu dropdown-menu-dark">
              <li><a class="dropdown-item" href="/my-badges">My badges</a></li>
              <li><a class="dropdown-item" href="/my-articles">My articles</a></li>
              <li><a class="dropdown-item" href="/my-reviews">My reviews</a></li>
              <li><hr class="dropdown-divider"></li>
              <form action="/logout" method="post">
                <button type="submit" class="dropdown-item">Logout</button>
              </form>
            </ul>
          </div>
          <!-- <div class="text-end">
            <a class="btn btn-warning bi-house-fill" role="button"></i></a>
          </div> -->
          
        </div>
      </div>
    </header>
    <% } %>

  <main>
    <%- body %>
  </main>
  <footer class="bg-dark text-white py-3">
    <div class="container">
      <div class="d-flex flex-wrap justify-content-start align-items-center">
        <p class="col-md-4 mb-0">&copy; 2023 Paper Dissemination System</p>
      </div>
    </div>
  </footer>
</body>

</html>