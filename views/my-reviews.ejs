<section class="py-lg-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="display-4 fst-italic">My Reviews</h1>
                <hr class="hero-divider" />
            </div>
        </div>
        <% for(let i = 0; i < reviews.length; i++){ %>
        <div class="row">
            <div class="col-lg-12 mb-4">
                <div class="review-card card shadow-sm">
                    <div class="d-flex justify-content-between card-header">
                    <div class="">
                        <h5 class="mb-0"><%=reviews[i].articleName %></h5>
                    </div>
                    <div >
                        <i class="bi bi-star-fill"></i> Grade: <%=reviews[i].grade %>
                    </div>
                </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <% for(let j = 0; j < reviewCriteria.length; j++){ %>
                                            <th class="text-center"><%=reviewCriteria[j].name %> <i class="bi bi-info-circle" data-bs-toggle="tooltip" data-bs-placement="top"
                                                title="<%=reviewCriteria[j].description %>"></i></th>
                                        <% } %>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <% for(let j = 0; j < reviewCriteria.length; j++){ %>
                                            <td class="text-center"><%=reviews[i].criteriaGrades[j + 1] %></td>
                                        <% } %>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <% for(let j = 0; j < reviewCriteria.length; j++){ %>
                        <!-- <div class="row mb-3">
                            <div class="col-md-3">
                                <strong><%=reviewCriteria[j].name %>: <i class="bi bi-info-circle" data-bs-toggle="tooltip" data-bs-placement="right"
                                    title="<%=reviewCriteria[j].description %>"></i></strong>
                            </div>
                            <div class="col-md-9">
                                <span><%=reviews[i].criteriaGrades[j + 1] %></span>
                            </div>
                        </div> -->
                        <% } %>

                        <div class="row mb-3">
                            <div class="col-md-3">
                                <strong>Ether received for review: </strong>
                            </div>
                            <% if(reviews[i].earnedAmount !== null){ %>
                            <div class="col-md-9">
                                <span><%=reviews[i].earnedAmount %> eth</span>
                            </div>
                            <% } else { %>
                                <div class="col-md-9">
                                <span>--</span>
                            </div>
                            <% } %>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <strong>Recommendations:</strong>
                                <p><%=reviews[i].recommendation %></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
    </div>
</section>
<script>
    document.addEventListener("DOMContentLoaded", function() {
    const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    const tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl);
    });
  });
  
</script>