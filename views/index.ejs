<h2>Lista produse:</h2>
<% for (let i in data) { %>
    <div class="produs">
        <div><%= data[i].id_produs %>. <%= data[i].nume_produs %>, <%= data[i].pret %></div>
        <% if(u != null){ %>
            <div>
                <form action="/adaugare-cos" method="post">
                    <input type="hidden" name="id" value=<%= data[i].id_produs %>>
                    <input type="submit" value="Adauga">
                </form>
            </div>
        <% } %>
    </div>
<% } %>
<div class="bottom-buttons">
<% if(u != null){ %>
    <a href="vizualizare-cos">Vizualizare cos</a>
<% } %>
<% if(type == "admin"){ %>
    <a href="admin">Adauga un produs nou in baza de date</a>
<% } %>
